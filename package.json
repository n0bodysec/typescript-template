{
	"name": "@snowyyd/typescript-template",
	"description": "A TypeScript project template",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"homepage": "https://github.com/snowyyd/typescript-template#readme",
	"repository": "https://github.com/snowyyd/typescript-template.git",
	"bugs": "https://github.com/snowyyd/typescript-template/issues",
	"author": "snowyyd <snowyyd@proton.me>",
	"license": "MIT",
	"publishConfig": {
		"directory": "dist"
	},
	"scripts": {
		"lint": "eslint src/",
		"type:check": "tsc",
		"dev": "ts-node src/main.ts",
		"dev:tsx": "tsx src/main.ts",
		"watch": "nodemon",
		"build": "node --experimental-strip-types scripts/build.ts",
		"prepack": "pnpm build"
	},
	"devDependencies": {
		"@snowyyd/eslint-config": "^1.2.1",
		"@types/node": "^24.0.1",
		"eslint": "^9.28.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-typescript": "^4.4.3",
		"eslint-plugin-import": "^2.31.0",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.0"
	}
}
